@model KongresRodziny2015.Models.Article

@{
    ViewBag.Title = "Artykul";
}

<h2>Artykuł</h2>

<div class="container">
    <div class="col-md-10 blogShort">
        <h1>@Model.Title</h1>
        <img src="@Model.ImageURI" alt="article image" class="pull-left img-responsive margin10 img-thumbnail" />
        <article>
            @Html.Raw(@Model.FullText)
        </article>
    </div>
</div>
<a class="btn btn-blog pull-right marginBottom10" href="@Url.Action("Index", "Home")">Wróć do strony głównej</a>
